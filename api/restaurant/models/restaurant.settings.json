{
  "kind": "collectionType",
  "collectionName": "restaurants",
  "info": {
    "name": "Restaurant"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "latitude": {
      "type": "float",
      "required": true
    },
    "longitude": {
      "type": "float",
      "required": true
    },
    "address": {
      "type": "string"
    },
    "phone": {
      "type": "string"
    },
    "menus": {
      "collection": "menu",
      "via": "restaurant"
    },
    "owners": {
      "plugin": "users-permissions",
      "collection": "user",
      "via": "restaurants",
      "dominant": true
    },
    "users": {
      "plugin": "users-permissions",
      "collection": "user",
      "via": "favorites"
    },
    "header_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "logo_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "rates": {
      "collection": "rate",
      "via": "restaurant"
    }
  }
}
